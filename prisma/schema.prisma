// This is your Prisma schema file,
// It includes models for Hospital and Account for authentication purposes.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole{
  USER
  ADMIN
}

enum SpecialCareCategory {
  PEDIATRIC
  FIRST_RESPONDERS
  SINGLE_CARETAKERS
  PREGNANT_PATIENTS
  SHORT_TERM_SURVIVAL
}

enum ECMOType {
  PULMONARY
  CARDIAC
  ECPR
}


// Hospital Model
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  role          UserRole @default(USER)
  isTwoFactorEnabled Boolean @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  accounts      Account[] // One-to-many relation to Account
  location      String    // Hospital location
  patients      Patient[]  // One-to-many relation to Patient
  ecmoMachines  ECMOMachine[] // One-to-many relation to ECMOMachine
}

model Patient {
  id             String   @id @default(cuid())
  name           String
  age            Int
  score          Int
  specialCare    SpecialCareCategory
  hospital       User @relation(fields: [hospitalId], references: [id], onDelete: Cascade)
  hospitalId     String
  ecmoType       ECMOType? // Optional field to specify the ECMO type needed or in use
}

model ECMOMachine {
  id             String   @id @default(cuid())
  model          String  
  serial         String
  inUse          Boolean
  type           ECMOType
  hospital       User @relation(fields: [hospitalId], references: [id], onDelete: Cascade)
  hospitalId     String
}

model TwoFactorConfirmation{
id String @id @default(cuid())
userId String
user User @relation(fields: [userId], references: [id], onDelete: Cascade)
@@unique([userId])
}

// Account Model
model Account {
  id                String   @id @default(cuid())
  userId        String   // This should be related to a Hospital
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  hospital          User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken{
  id  String @id @default(cuid())
  email String
  token   String @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken{
  id  String @id @default(cuid())
  email String
  token String @unique
  expires DateTime
  
  @@unique([email, token])
}

model TwoFactorToken{
  id  String @id @default(cuid())
  email String
  token String @unique
  expires DateTime
  
  @@unique([email, token])
}

